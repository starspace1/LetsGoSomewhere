 <!-- TODO sort of scrolling or format adjustment for when there are lots of friends -->
<h4>Trip members:</h4>
<ul class="list-group">
  <% @trip.users.each do |user| %>
    <% if user.invitation_token %>
    <!-- Display users who have been invited to join the group in italics -->
      <em><li class="list-group-item"><%= link_to user.email, user_path(user) %> (pending) </li></em>
    <% else %>
      <li class="list-group-item"><%= link_to user.email, user_path(user) %></li>
    <% end %>
  <% end %>
</ul>