<div class="blacky container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Create New Trip</h1>
      <!-- TODO make sure there are labels for every form input -->
      <%= form_for @trip do |f| %>
      <p>
        <%= f.label :name, "Trip Name:" %>
        <%= f.text_field :name %>
      </p>
     <%= f.label :start_date, "Some time between:" %>
      <!-- TODO add little calendar glyphicon -->
      <p>
        <%= f.text_field :start_date, :class => 'datepicker', value: Date.today %>
        <%= f.label :end_date, "and:" %>
        <!-- TODO make this jump to picked start date -->
        <%= f.text_field :end_date, :class => 'datepicker', value: Date.today.next_month(3) %>
      </p>
      <p>
        <%= f.submit class: "btn btn-default" %>
        <%= link_to "Cancel", root_path, class: "btn btn-default" %>
      </p>
      <% end %>
    </div>
  </div>
</div>