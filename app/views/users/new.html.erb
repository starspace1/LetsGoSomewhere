<h1>Create New User</h1>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email, "Email:" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm Password:" %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
