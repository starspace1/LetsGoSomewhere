<% if @busy_interval %>

  // If the event already exists on the calendar, remove it so we can re-render it
  // with the proper start and end
  if ($('#calendar').fullCalendar( 'clientEvents' [<%= @busy_interval.id %>] )) {
    $('#calendar').fullCalendar( 'removeEvents', [<%= @busy_interval.id %>] );
  }
  
  $('#calendar').fullCalendar('renderEvent', {
                          id: <%= @busy_interval.id %>,
                          title: 'Busy',
                          start: "<%= @busy_interval.start_date %>",
                          end: "<%= @busy_interval.end_date %>",
                          allDay: true,
                          rendering: "background",
                          color: "red",
                          backgroundColor: "red"
                      }, false );
<% end %>

