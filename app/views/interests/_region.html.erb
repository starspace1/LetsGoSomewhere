<div class="panel panel-default transparent">
  <div id="pnl-hdg" class="panel-heading">
    <h4 class="panel-title">
      <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
      <a class="region-panel-link" data-toggle="collapse" href="#collapse<%=region.gsub(' ','')%>"><%= region %></a>
    </h4>
  </div>  
  <div id="collapse<%=region.gsub(' ','')%>" class="panel-collapse collapse">
    <div class="panel-body">
      <% Destination.countries(region).each do |country| %>
        <h4><%= "#{country}: " %></h4>
        <%= render partial: 'country', locals: {country: country} %>
        <br>
      <% end %>
    </div>
  </div>
</div>