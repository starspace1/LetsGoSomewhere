<h2>Update Destinations</h2>
<!-- TODO: generalize regions, show countries -->
<%= form_tag(interests_update_path, method: :post) do %>
  <div class="bs-example">
    <div class="panel-group">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapseOne">North America</a>
          </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse">
          <div class="panel-body">
            <%= collection_check_boxes(:user, :destination_ids, Destination.where(region: "North America"), :id, :city) do |b| %>
              <%= b.label(class: "checkbox-inline") do %>
                <%= b.check_box() %> <%= b.object.city %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapseTwo">South America</a>
          </h4>
        </div>
        <div id="collapseTwo" class="panel-collapse collapse">
          <div class="panel-body">
            <%= collection_check_boxes(:user, :destination_ids, Destination.where(region: "South America"), :id, :city) do |b| %>
              <%= b.label(class: "checkbox-inline") do %>
                <%= b.check_box() %> <%= b.object.city %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapseThree">Europe</a>
          </h4>
        </div>
        <div id="collapseThree" class="panel-collapse collapse">
          <div class="panel-body">
            <%= collection_check_boxes(:user, :destination_ids, Destination.where(region: "Europe"), :id, :city) do |b| %>
              <%= b.label(class: "checkbox-inline") do %>
                <%= b.check_box() %> <%= b.object.city %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= submit_tag "Update" , class: "btn btn-default"%>
<% end %>
